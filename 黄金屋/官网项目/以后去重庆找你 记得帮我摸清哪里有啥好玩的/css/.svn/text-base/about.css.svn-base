div,
ul,
li,
p,
span,
i,
a {
	margin: 0;
	padding: 0;
	list-style: none;
	text-decoration: none;
}


/*header*/

.header {
	background: url(../img/hjw_about_header.jpg) no-repeat;
	background-size: cover;
	height: 562px;
}
.log>img{
	cursor: pointer;
}
.right {
	color: #FFF;
}

.right_ul li {
	text-align: center;
	line-height: 40px;
	color: #FFF;
}

.right_ul li a {
	text-decoration: none;
	color: #FFF;
}

.menu {
	float: right;
}

.right_ul {
	color: #FFF;
	cursor: pointer;
}

.right_ul>li {
	display: inline-block;
}

.links {
	overflow: hidden;
}

.links .text {
	display: block;
	text-shadow: 0px -40px 0px rgba(255, 255, 255, 1);
	transition: all 0.75s;
	transform: translateY(100%) translateZ(0);
	transition-delay: all 0.25s;
}

.links:hover .text,
.links.hover .text {
	transform: translateY(0%) translateZ(0) scale(1.2);
	font-weight: 600;
}

.active {
	transform: translateY(0%) translateZ(0) scale(1.2);
	font-weight: 600;
}


/*middle*/

.middle {
	height: 200px;
	background: #FFF;
	margin-top: -200px;
	box-shadow: 1px 1px 4px #d7d7d7;
}

.ol_middle {
	display: flex;
	justify-content: space-around;
	margin-top: 5%;
}

.ol_middle p {
	margin-top: 10px;
}

.ol_middle>li {
	cursor: pointer;
}

.middle_text {
	font-size: 12px;
	color: #333333;
}

.text_top {
	margin-top: 20px;
}

.middle_text i {
	padding: 0 5px;
}

.text_sign {
	margin-top: 30px;
}

.text_title {
	font-size: 24px;
}

.text_english {
	font-size: 14px;
}

.text_box p {
	font-size: 12px;
	line-height: 18px;
	margin-top: 20px;
	text-indent: 2em
}

.right_img {
	margin-top: 15px;
}

.dynamc_text {
	margin-top: 45px;
	cursor: pointer;
}

.headline {
	margin-top: 15px;
	font-size: 16px;
	color: #000000;
	font-weight: 400;
}

.dynamc_text:hover .headline {
	color: #3989ff;
}

.new_date {
	border-left: 1px solid #999999;
}

.date_detail {
	margin: 0 auto;
}

.date {
	font-size: 40px;
	color: #666666;
	text-align: center;
	margin: 0;
}

.mon {
	font-size: 12px;
	color: #999999;
	text-align: center;
}

.more {
	width: 140px;
	height: 40px;
	text-align: center;
	font-size: 16px;
	line-height: 40px;
	color: #3989ff;
	margin: 10px auto;
	border: 1px solid #3989ff;
	border-radius: 5px;
	cursor: pointer;
}



.suExample {
	height: 300px;
	border: 1px solid #bbbbbb;
	margin-left: 30px;
	margin-top: 30px;
	cursor: pointer;
}
.suExample:hover{
	border-color: #3989ff;
}
.suExample_img {
	margin-top: 60px;
}
.suExample p {
	width: 113px;
	height: 31px;
	margin: 0 auto;
	color: #666666;
	text-align: left;
}

.suExample .suExample_title {
	font-size: 18px;
	margin-top: 40px;
	text-align: center;
	color: #333333;
}
h2{
	text-align: center;
	font-size: 24px;
	font-weight: bold;
}
.suExample_big{
	margin-top: 40px;
}
.suExample_box{
	text-align: center;
}
.suExample_box>img{
	margin-left: 25%;
}
.suExample_box:hover .p{
	color: #3989ff;
}
.suExample_left{
	border:1px solid #666666;
}
.suExample_left{
	max-height: 480px;	
	padding: 20px 20px 40px 20px;
}
.suExample_left p,.suExample_right p{
	margin-top: 20px;
	color: #333333;
}
.suExample_right p:nth-of-type(1){
	margin-top: 40px;
	font-size: 18px;
	font-weight: bold;
}
/*适配*/
@media (max-width:1200px) {
	.suExample{
		margin-left: 0px;
	}
	.suExample:nth-of-type(5){
		margin-left: 360px;
	}
}
@media (max-width:992px) {
	.suExample{
		margin-left: 0px;
	}
	.suExample:nth-of-type(5){
		margin-left:0px;
	}
	.suExample:nth-of-type(4){
		margin-left: 120px;
	}
}

@media (max-width:768px) {
	.right_ul {
		display: none;
		width: 70%;
		font-size: 12px;
	}
	.right_ul li {
		width: 100%;
		opacity: 0.9;
	}
	.ol_middle p {
		font-size: 10px;
		width: 30px;
		text-align: center;
		margin: 10px auto;
	}
	.new_date {
		border-left: 1px solid white;
	}
	.suExample:nth-of-type(4){
		margin-left: 0px;
	}
	.suExample:nth-of-type(5){
		position: relative;
		left:25%;
	}
}