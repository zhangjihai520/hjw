<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<link href="css/help.css" rel="stylesheet" type="text/css" />
		<link href="css/common.css" rel="stylesheet" type="text/css" />
		<script src="js/jquery.js" type="text/javascript"></script>
		<script src="js/globals.js"></script>
		<script src="js/mui_use.js"></script>
		<script src="js/mui.min.js"></script>
		<script src="js/globals.js"></script>
		<script src="js/constructors.js"></script>
		<script src="js/public_functionsLL.js"></script>
		<script src="js/common.js"></script>
		<script src="js/utilLL.js"></script>
	</head>
	<body>
		<div class="cplb_top">
			<h3 id="Hdevice" class="Hdevice">设备号：-</h3>
		</div>
		<div id="divContent" class="bzxq" style="overflow-y: scroll;">
			<h4 class="help-detail-data-newTitle"></h4>
			<P class="help-detail-data-newContent"></P>
		</div>
		<div class="return_btn tappable" style="right: 60px;" data-action="back">返回</div>
	</body>
	
	<script>
		var Hdevice = document.getElementById('Hdevice');
		Hdevice.innerHTML = '设备号:'  + public_getBookShelfNo();
		document.querySelector(".help-detail-data-newTitle").innerHTML = localStorage.getItem("newTitle");
		document.querySelector(".help-detail-data-newContent").innerHTML = localStorage.getItem("newContent");
		
		document.addEventListener('tap', function(event) {
			var target = event.target;
			var wrapper = util.dom.getWrapperByClass(target, "tappable"),
				focusedInput,
				element;
			if(wrapper) {
				var _document = document,
					_localStorage = localStorage,
					wrapperDataset = wrapper.dataset;

				switch(wrapperDataset.action) {
					case "back":
						mui.back();
						break;
				}
			}
		});
	</script>
</html>
