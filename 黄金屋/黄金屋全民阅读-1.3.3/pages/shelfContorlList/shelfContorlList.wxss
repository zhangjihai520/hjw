.borrowList{
  width: 100%;
  height: 100%;
}

.listItem{
  width: 100%;
  height: 80px;
  border-bottom: 5px #F3F3F3 solid;
}

.itemImg{
  width: 28%;
  height: 80px;
  float: left;
}

.itemTextView{
  width: 72%;
  height: 80px;
  float: right;
}
.itemText1{
  width: 81%;
  font-size: 16px;
  color: #333;
  float: left;
  display: block;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
  margin: 8px 0px 0px 4%;
}

.itemText2{
  width: 96%;
  font-size: 12px;
  margin: 5px 0px 0px 4%;
  float: left;
  color: #999;
}

.online_state_true{
  width: 12%;
	font-size: 12px ;
	float: right;
	color: #70ed3a;
  margin: 10px 3% 0px 0px;
}

.online_state_false{
  width: 12%;
	font-size: 12px ;
	float: right;
	color: #999;
  margin: 10px 3% 0px 0px;
}