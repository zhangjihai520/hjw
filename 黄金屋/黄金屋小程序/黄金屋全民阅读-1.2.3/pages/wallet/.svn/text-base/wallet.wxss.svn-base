.wallet_card{
  width: 210px;
  height: 130px;
  margin: 20px auto;
  border-radius: 10px;
  background-size: 210px 130px;
	-moz-box-shadow: 3px 3px 8px #999; /* 老的 Firefox */
	box-shadow: 3px 3px 8px #999;
}

.card_name{
  width: 210px;
  height: 84px;
}

.account{
  font-size: 15px;
  margin-left: 15px;
}

.orgName{
  font-size: 12px;
  margin-left: 15px;
}

.row{
  width: 100%;
  height: 55px;
  line-height: 55px;
  padding: 0px 10px;
  border-bottom: 1px #F3F3F3 solid;
}

.title{
  font-size: 15px;
  color: #333;
  float: left;
}

.balance{
  font-size: 10px;
  color: #FF4E00;
  margin-left: 20px;
  float: left;
}

.balance_text{
  font-size: 10px;
  color: #999;
  float: left;
}

.btn{
  width: 75px;
  height: 25px;
  line-height: 25px;
  text-align: center;
  font-size: 12px;
  color: #333;
  background-color: #FDD017;
  border-radius: 12px;
  float: right;
  margin: 15px 20px;
}

.no_deposit{
  font-size: 12px;
  color: #333;
  float: right;
  margin-right: 20px;
}

.notice_title{
  margin: 10px;
  font-size: 12px;
  color: #999;
}

.notice_text{
  margin: 0px 0px 5px 10px;
  font-size: 10px;
  color: #999;
}