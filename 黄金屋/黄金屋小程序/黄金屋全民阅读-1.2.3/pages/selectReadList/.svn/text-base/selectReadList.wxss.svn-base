.listitem{
  width: 100%;
  height: 55px;
  border-bottom: 5px solid #F3F3F3;
}

.article_name{
  height: 55px;
  line-height: 55px;
  font-size: 15px;
  padding-left: 10px;
  float: left;
}

.rightImg{
  width: 7px;
  height: 12px;
  float: right;
  margin: 20px 10px;
}

.record_time{
  height: 48px;
  line-height: 48px;
  font-size: 14px;
  padding-right: 10px;
  float: right;
}

.b1 {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
}

.b2 {
  width: 250px;
  height: 350px;
  margin: 35% auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 12rpx;
}

.title{
  width: 100%;
  height: 20px;
  margin-top: 10px;
  font-size: 16px;
  text-align: center;
  line-height: 20px;
}

.content{
  width: 206px;
  height: 229px;
  margin: 10px 25px 35px 25px;
  word-break: break-all;
  float: left;
  font-size: 12px;
  color: #999;
}

.submit{
  width: 100%;
  height: 48px;
  background-color: #FDD017;
  text-align: center;
  line-height: 48px;
  font-size: 15px;
  color: #333;
  float: left;
}