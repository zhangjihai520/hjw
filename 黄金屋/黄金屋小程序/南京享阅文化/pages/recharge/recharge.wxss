.page{
  min-height:100%;
  background-color: #F3F3F3;
}

.title{
  width: 100%;
  font-size: 15px;
  color: #333;
  float: left;
  background-color: #FFF;
  margin: 20px 0px 0px 10px;
}

.balance_input{
  width: 100%;
  height: 20px;
  font-size: 15px;
  color: #999;
  float: left;
  padding: 10px;
  background-color: #FFF;
  border-bottom: 1px solid #F3F3F3;
}

.Item_unactive{
  width: 30%;
  height: 60px;
  margin: 10px 0px 0px 2%;
  border: 1px solid #439bc7;
  text-align: center;
  line-height: 60px;
  border-radius: 10px;
  font-size: 20px;
  float: left;
}

.rechageBtn{
  width: 200px;
  height: 35px;
  text-align: center;
  line-height: 35px;
  color: #fff;
  font-size: 12px;
  background-color: #439bc7;
  border-radius: 15px;
  margin: 20px 0px 0px 24%;
  float: left;
}